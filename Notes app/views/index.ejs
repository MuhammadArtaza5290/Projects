<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <title>Notes App</title>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900">
      <div class="form p-10 text-white">
        <form action="/create" method="post">
          <input
            class="block w-3/5 rounded-md outline-none px-5 py-2 bg-zinc-800"
            type="text"
            placeholder="Title goes"
            name="title"
          />
          <textarea
            class="block w-3/5 rounded-md outline-none mt-2 px-5 py-2 resize-none bg-zinc-800"
            placeholder="Write your task details here"
            name="detail"
          ></textarea>
          <input
            class="mt-2 bg-blue-600 px-5 py-2 rounded-md"
            type="submit"
            value="Create Task"
          />
        </form>
      </div>
      <div class="tasks flex gap-3 flex-wrap p-10">
        <% if(files.length > 0){%> <% files.forEach(function(val){ %>
        <div class="task min-w-72 px-3 py-4 rounded-md bg-zinc-800">
          <div class="flex items-end justify-end">
            <a href="/editdetail/<%= val %>" class="text-zinc-500 hover:text-green-500 mx-4"
              ><i class="fa-solid fa-pen-to-square"></i
            ></a>
            <a
              href="/delete/<%= val %>"
              class="text-zinc-500 hover:text-red-500"
              title="Delete"
            >
              <i class="fa-solid fa-trash-can"></i>
            </a>
          </div>
          <div class="flex w-full justify-around items-center mt-3">
            <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>
          </div>
          <div class="flex w-full justify-between items-center mt-3">
            <a href="/file/<%= val %>" class="text-blue-500 inline-block"
              >Read more...</a
            >
            <a href="/edit/<%= val %>" class="text-blue-500">Edit filename</a>
          </div>
        </div>
        <% }) %> <% } else {%>
        <h3 class="text-zinc-600 text-3xl">No tasks yet</h3>
        <% }%>
      </div>
    </div>
  </body>
</html>
